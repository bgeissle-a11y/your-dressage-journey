{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/firstGlimpse",
        "function": "firstGlimpse"
      },
      {
        "source": "/waitlist",
        "function": "waitlist"
      },
      {
        "source": "/first-glimpse",
        "destination": "/first-glimpse.html"
      },
      {
        "source": "/first-glimpse-quick",
        "destination": "/first-glimpse-quick.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  }
}
