    <script>
        let observationCounter = 0;

        // Set today's date as default
        document.getElementById('observationDate').valueAsDate = new Date();

        // Handle context type change
        function handleContextChange() {
            const contextType = document.getElementById('contextType').value;
            
            // Hide all conditional fields
            document.getElementById('clinicFields').style.display = 'none';
            document.getElementById('trainerFields').style.display = 'none';
            document.getElementById('schoolingFields').style.display = 'none';
            document.getElementById('showFields').style.display = 'none';
            document.getElementById('videoFields').style.display = 'none';
            
            // Show relevant fields
            switch(contextType) {
                case 'clinic':
                    document.getElementById('clinicFields').style.display = 'block';
                    break;
                case 'trainer-riding':
                    document.getElementById('trainerFields').style.display = 'block';
                    break;
                case 'schooling':
                    document.getElementById('schoolingFields').style.display = 'block';
                    break;
                case 'show':
                    document.getElementById('showFields').style.display = 'block';
                    break;
                case 'video':
                    document.getElementById('videoFields').style.display = 'block';
                    break;
            }
        }

        // Add observation item
        function addObservation() {
            observationCounter++;
            const container = document.getElementById('observationsContainer');
            
            const observationHTML = `
                <div class="observation-item" id="observation-${observationCounter}">
                    <div class="observation-header">
                        <div class="observation-number">Observation #${observationCounter}</div>
                        <button type="button" class="btn btn-danger" onclick="removeObservation(${observationCounter})" style="padding: 8px 16px; font-size: 0.9em;">Remove</button>
                    </div>
                    
                    <div class="question">
                        <label for="milestone-${observationCounter}">üü¶ Milestone</label>
                        <textarea id="milestone-${observationCounter}" name="milestone-${observationCounter}" placeholder="What instructional cues or riding techniques made an observable difference, how and why?"></textarea>
                        <button type="button" class="voice-btn" id="voiceBtn-milestone-${observationCounter}">
                            <svg class="voice-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"></path>
                                <path d="M19 10v2a7 7 0 0 1-14 0v-2"></path>
                                <line x1="12" y1="19" x2="12" y2="23"></line>
                                <line x1="8" y1="23" x2="16" y2="23"></line>
                            </svg>
                            <span class="voice-text">Use Voice Input</span>
                        </button>
                    </div>
                    
                    <div class="question">
                        <label for="aha-${observationCounter}">üü® Aha Moment</label>
                        <textarea id="aha-${observationCounter}" name="aha-${observationCounter}" placeholder="What particularly resonated with you and how could you incorporate it into your riding?"></textarea>
                        <button type="button" class="voice-btn" id="voiceBtn-aha-${observationCounter}">
                            <svg class="voice-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"></path>
                                <path d="M19 10v2a7 7 0 0 1-14 0v-2"></path>
                                <line x1="12" y1="19" x2="12" y2="23"></line>
                                <line x1="8" y1="23" x2="16" y2="23"></line>
                            </svg>
                            <span class="voice-text">Use Voice Input</span>
                        </button>
                    </div>
                    
                    <div class="question">
                        <label for="connection-${observationCounter}">üü™ Connection</label>
                        <textarea id="connection-${observationCounter}" name="connection-${observationCounter}" placeholder="What did you notice about the horse-rider connection or partnership?"></textarea>
                        <button type="button" class="voice-btn" id="voiceBtn-connection-${observationCounter}">
                            <svg class="voice-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"></path>
                                <path d="M19 10v2a7 7 0 0 1-14 0v-2"></path>
                                <line x1="12" y1="19" x2="12" y2="23"></line>
                                <line x1="8" y1="23" x2="16" y2="23"></line>
                            </svg>
                            <span class="voice-text">Use Voice Input</span>
                        </button>
                    </div>
                    
                    <div class="question">
                        <label for="validation-${observationCounter}">üü© Validation</label>
                        <textarea id="validation-${observationCounter}" name="validation-${observationCounter}" placeholder="What confirmed or validated concepts you've been working on?"></textarea>
                        <button type="button" class="voice-btn" id="voiceBtn-validation-${observationCounter}">
                            <svg class="voice-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"></path>
                                <path d="M19 10v2a7 7 0 0 1-14 0v-2"></path>
                                <line x1="12" y1="19" x2="12" y2="23"></line>
                                <line x1="8" y1="23" x2="16" y2="23"></line>
                            </svg>
                            <span class="voice-text">Use Voice Input</span>
                        </button>
                    </div>
                    
                    <div class="question">
                        <label for="obstacle-${observationCounter}">üü• Obstacle</label>
                        <textarea id="obstacle-${observationCounter}" name="obstacle-${observationCounter}" placeholder="What challenges did you observe and what successful ways were they overcome?"></textarea>
                        <button type="button" class="voice-btn" id="voiceBtn-obstacle-${observationCounter}">
                            <svg class="voice-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"></path>
                                <path d="M19 10v2a7 7 0 0 1-14 0v-2"></path>
                                <line x1="12" y1="19" x2="12" y2="23"></line>
                                <line x1="8" y1="23" x2="16" y2="23"></line>
                            </svg>
                            <span class="voice-text">Use Voice Input</span>
                        </button>
                    </div>
                    
                    <div class="question">
                        <label for="notes-${observationCounter}">Additional Notes</label>
                        <textarea id="notes-${observationCounter}" name="notes-${observationCounter}" placeholder="Any other observations or takeaways?"></textarea>
                        <button type="button" class="voice-btn" id="voiceBtn-notes-${observationCounter}">
                            <svg class="voice-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"></path>
                                <path d="M19 10v2a7 7 0 0 1-14 0v-2"></path>
                                <line x1="12" y1="19" x2="12" y2="23"></line>
                                <line x1="8" y1="23" x2="16" y2="23"></line>
                            </svg>
                            <span class="voice-text">Use Voice Input</span>
                        </button>
                    </div>
                </div>
            `;
            
            container.insertAdjacentHTML('beforeend', observationHTML);
            
            // Set up voice input for all textareas in this observation
            setupVoiceInput(`voiceBtn-milestone-${observationCounter}`, `milestone-${observationCounter}`);
            setupVoiceInput(`voiceBtn-aha-${observationCounter}`, `aha-${observationCounter}`);
            setupVoiceInput(`voiceBtn-connection-${observationCounter}`, `connection-${observationCounter}`);
            setupVoiceInput(`voiceBtn-validation-${observationCounter}`, `validation-${observationCounter}`);
            setupVoiceInput(`voiceBtn-obstacle-${observationCounter}`, `obstacle-${observationCounter}`);
            setupVoiceInput(`voiceBtn-notes-${observationCounter}`, `notes-${observationCounter}`);
        }

        // Remove observation item
        function removeObservation(id) {
            const element = document.getElementById(`observation-${id}`);
            if (element) {
                element.remove();
            }
        }

        // Voice input functionality
        function setupVoiceInput(btnId, textareaId) {
            const btn = document.getElementById(btnId);
            const textarea = document.getElementById(textareaId);
            
            if (!btn || !textarea) return;
            
            if (!('webkitSpeechRecognition' in window) && !('SpeechRecognition' in window)) {
                btn.style.display = 'none';
                return;
            }
            
            const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
            const recognition = new SpeechRecognition();
            recognition.continuous = true;
            recognition.interimResults = true;
            
            let isRecording = false;
            
            btn.addEventListener('click', (e) => {
                e.preventDefault();
                if (!isRecording) {
                    recognition.start();
                    btn.classList.add('recording');
                    btn.querySelector('.voice-text').textContent = 'Recording... (click to stop)';
                    isRecording = true;
                } else {
                    recognition.stop();
                    btn.classList.remove('recording');
                    btn.querySelector('.voice-text').textContent = 'Use Voice Input';
                    isRecording = false;
                }
            });
            
            recognition.onresult = (event) => {
                let finalTranscript = '';
                let interimTranscript = '';
                
                for (let i = event.resultIndex; i < event.results.length; i++) {
                    const transcript = event.results[i][0].transcript;
                    if (event.results[i].isFinal) {
                        finalTranscript += transcript + ' ';
                    } else {
                        interimTranscript += transcript;
                    }
                }
                
                if (finalTranscript) {
                    textarea.value += finalTranscript;
                }
            };
            
            recognition.onerror = (event) => {
                console.error('Speech recognition error:', event.error);
                btn.classList.remove('recording');
                btn.querySelector('.voice-text').textContent = 'Use Voice Input';
                isRecording = false;
            };
        }

        // Initialize with one observation
        addObservation();

        // Form submission
        document.getElementById('observationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = {
                date: document.getElementById('observationDate').value,
                contextType: document.getElementById('contextType').value,
                timestamp: new Date().toISOString()
            };
            
            // Add context-specific fields
            switch(formData.contextType) {
                case 'clinic':
                    formData.clinicianName = document.getElementById('clinicianName').value;
                    formData.pairObserved = document.getElementById('pairObserved').value;
                    break;
                case 'trainer-riding':
                    formData.horseName = document.getElementById('horseName').value;
                    break;
                case 'schooling':
                    formData.description = document.getElementById('schoolingDescription').value;
                    break;
                case 'show':
                    formData.description = document.getElementById('showDescription').value;
                    break;
                case 'video':
                    formData.description = document.getElementById('videoDescription').value;
                    break;
            }
            
            // Collect all observations
            formData.observations = [];
            const observationElements = document.querySelectorAll('.observation-item');
            
            observationElements.forEach((element) => {
                const id = element.id.split('-')[1];
                const observation = {
                    milestone: document.getElementById(`milestone-${id}`)?.value || '',
                    aha: document.getElementById(`aha-${id}`)?.value || '',
                    connection: document.getElementById(`connection-${id}`)?.value || '',
                    validation: document.getElementById(`validation-${id}`)?.value || '',
                    obstacle: document.getElementById(`obstacle-${id}`)?.value || '',
                    notes: document.getElementById(`notes-${id}`)?.value || ''
                };
                
                // Only add if at least one field is filled
                if (Object.values(observation).some(val => val.trim() !== '')) {
                    formData.observations.push(observation);
                }
            });
            
            // Save to localStorage
            const observations = JSON.parse(localStorage.getItem('observationForms') || '[]');
            observations.push(formData);
            localStorage.setItem('observationForms', JSON.stringify(observations));
            
            // Show success message
            const successMsg = document.getElementById('successMessage');
            successMsg.style.display = 'block';
            setTimeout(() => {
                successMsg.style.display = 'none';
            }, 3000);
            
            // Reset form
            resetForm();
            updateViewButton();
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        // Reset form
        function resetForm() {
            document.getElementById('observationForm').reset();
            document.getElementById('observationDate').valueAsDate = new Date();
            
            // Clear observations
            document.getElementById('observationsContainer').innerHTML = '';
            observationCounter = 0;
            
            // Hide conditional fields
            handleContextChange();
            
            // Add one observation
            addObservation();
        }

        // Toggle between form and list view
        function toggleView() {
            const formView = document.getElementById('formView');
            const listView = document.getElementById('listView');
            
            if (formView.style.display === 'none') {
                formView.style.display = 'block';
                listView.style.display = 'none';
            } else {
                formView.style.display = 'none';
                listView.style.display = 'block';
                renderObservations();
            }
        }

        // Render observations list
        function renderObservations() {
            const observations = JSON.parse(localStorage.getItem('observationForms') || '[]');
            const container = document.getElementById('observationsList');
            
            if (observations.length === 0) {
                container.innerHTML = '<div class="observation-card"><p style="text-align: center; color: var(--color-text-light);">No observations saved yet.</p></div>';
                return;
            }
            
            const contextLabels = {
                'clinic': 'Clinic',
                'trainer-riding': 'Trainer Riding Your Horse',
                'schooling': 'Schooling/Training Session',
                'show': 'Show',
                'video': 'Video'
            };
            
            let html = '';
            
            observations.reverse().forEach((obs, index) => {
                const date = new Date(obs.date);
                const formattedDate = date.toLocaleDateString('en-US', { 
                    weekday: 'long',
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric'
                });
                
                let contextDetail = contextLabels[obs.contextType] || obs.contextType;
                if (obs.contextType === 'clinic' && obs.clinicianName) {
                    contextDetail += ` ‚Ä¢ ${obs.clinicianName}`;
                    if (obs.pairObserved) contextDetail += ` (${obs.pairObserved})`;
                } else if (obs.contextType === 'trainer-riding' && obs.horseName) {
                    contextDetail += ` ‚Ä¢ ${obs.horseName}`;
                } else if (obs.description) {
                    contextDetail += ` ‚Ä¢ ${obs.description}`;
                }
                
                html += `
                    <div class="observation-card">
                        <div class="observation-card-header">
                            <div class="observation-meta">
                                <div class="observation-date">${formattedDate}</div>
                                <div class="observation-context">${contextDetail}</div>
                            </div>
                        </div>
                        <div class="observation-content">
                            ${obs.observations.map((item, i) => `
                                <div style="margin-bottom: 25px; padding-bottom: 20px; border-bottom: 1px solid var(--color-border);">
                                    <div style="font-weight: 600; color: var(--color-primary); margin-bottom: 15px;">Observation #${i + 1}</div>
                                    ${item.milestone ? `
                                        <div class="content-row">
                                            <div class="content-label">üü¶ Milestone</div>
                                            <div class="content-value">${item.milestone}</div>
                                        </div>
                                    ` : ''}
                                    ${item.aha ? `
                                        <div class="content-row">
                                            <div class="content-label">üü® Aha Moment</div>
                                            <div class="content-value">${item.aha}</div>
                                        </div>
                                    ` : ''}
                                    ${item.connection ? `
                                        <div class="content-row">
                                            <div class="content-label">üü™ Connection</div>
                                            <div class="content-value">${item.connection}</div>
                                        </div>
                                    ` : ''}
                                    ${item.validation ? `
                                        <div class="content-row">
                                            <div class="content-label">üü© Validation</div>
                                            <div class="content-value">${item.validation}</div>
                                        </div>
                                    ` : ''}
                                    ${item.obstacle ? `
                                        <div class="content-row">
                                            <div class="content-label">üü• Obstacle</div>
                                            <div class="content-value">${item.obstacle}</div>
                                        </div>
                                    ` : ''}
                                    ${item.notes ? `
                                        <div class="content-row">
                                            <div class="content-label">Additional Notes</div>
                                            <div class="content-value">${item.notes}</div>
                                        </div>
                                    ` : ''}
                                </div>
                            `).join('')}
                        </div>
                        <div style="margin-top: 20px; padding-top: 15px; border-top: 1px solid var(--color-border);">
                            <button class="btn btn-danger" style="padding: 8px 16px; font-size: 0.9em;" onclick="deleteObservation(${observations.length - 1 - index})">Delete</button>
                        </div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
        }

        // Delete observation
        function deleteObservation(index) {
            if (confirm('Are you sure you want to delete this observation?')) {
                const observations = JSON.parse(localStorage.getItem('observationForms') || '[]');
                observations.splice(index, 1);
                localStorage.setItem('observationForms', JSON.stringify(observations));
                renderObservations();
                updateViewButton();
            }
        }

        // Export to JSON
        function exportToJSON() {
            const observations = JSON.parse(localStorage.getItem('observationForms') || '[]');
            const dataStr = JSON.stringify(observations, null, 2);
            const dataBlob = new Blob([dataStr], { type: 'application/json' });
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = `observations-${new Date().toISOString().split('T')[0]}.json`;
            link.click();
            URL.revokeObjectURL(url);
        }

        // Clear all observations
        function clearAllObservations() {
            if (confirm('Are you sure you want to delete ALL observations? This cannot be undone.')) {
                if (confirm('This will permanently delete all your observations. Are you absolutely sure?')) {
                    localStorage.removeItem('observationForms');
                    renderObservations();
                    updateViewButton();
                }
            }
        }

        // Update view button visibility
        function updateViewButton() {
            const observations = JSON.parse(localStorage.getItem('observationForms') || '[]');
            const viewBtn = document.getElementById('viewObservations');
            viewBtn.style.display = observations.length > 0 ? 'inline-block' : 'none';
        }

        // Initialize
        updateViewButton();
        
        // Set up voice input for conditional description fields
        setupVoiceInput('voiceBtn-schooling', 'schoolingDescription');
        setupVoiceInput('voiceBtn-show', 'showDescription');
        setupVoiceInput('voiceBtn-video', 'videoDescription');
    </script>
</body>
</html>
